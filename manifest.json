{
  "manifest_version": 2,
  "name": "Tracked everywhere",
  "description": "Analyse Internet usage and find how much GAFAM are present.",
  "author": "Richard Hanna",
  "version": "0.1.0",
  "icons": {
    "48": "icons/icon-on-48.png"
  },
  "permissions": [
    "storage",
    "webRequest",
    "<all_urls>"
  ],
  "background": {
    "scripts": [
      "script.js"
    ]
  },
  "browser_action": {
    "browser_style": true,
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "icons/icon-off-48.png"
    }
  },
  "default_locale": "en"
}
